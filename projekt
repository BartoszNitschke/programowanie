void przelew()
{
float kwota;
string adresat;
cout<<"Jaka kwote chcesz przelac?"
cin>>kwota;
cout<<"Wypisz adresata:"<<endl;
cin>>adresat;

//warunek na sprawdzenie czy jest taka kwota na koncie
for(int i=0;i<login.size();i++)
{
        if(adresat==login[i])
{               stan-=kwota;
                stan[i]+=kwota;
}

        else
        stan-=kwota;
}

}
